<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    android:layout_marginHorizontal="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/surface_variant">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Step Header -->
        <TextView
            android:id="@+id/tv_decoding_step_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 1"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:layout_marginBottom="8dp" />

        <!-- Description -->
        <TextView
            android:id="@+id/tv_decoding_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/on_surface"
            android:layout_marginBottom="12dp"
            tools:text="Baca simbol biner '101', cocok dengan kode untuk karakter 'A'. Decode: '101' â†’ 'A'" />

        <!-- Decoding Details Grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/surface"
            android:padding="8dp"
            android:layout_marginTop="4dp">

            <!-- Row 1: Current Bits and Matched Code -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="6dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bit Dibaca:"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/on_surface_variant" />

                    <TextView
                        android:id="@+id/tv_current_bits"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="@color/primary"
                        android:fontFamily="monospace"
                        android:textStyle="bold"
                        tools:text="101" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kode Cocok:"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/on_surface_variant" />

                    <TextView
                        android:id="@+id/tv_matched_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="@color/secondary"
                        android:fontFamily="monospace"
                        android:textStyle="bold"
                        tools:text="101" />

                </LinearLayout>

            </LinearLayout>

            <!-- Row 2: Decoded Character and Remaining Bits -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="6dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Karakter:"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/on_surface_variant" />

                    <TextView
                        android:id="@+id/tv_decoded_char"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/on_surface"
                        android:textStyle="bold"
                        android:background="@drawable/character_background"
                        android:padding="4dp"
                        tools:text="'A'" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sisa Bit:"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/on_surface_variant" />

                    <TextView
                        android:id="@+id/tv_remaining_bits"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/on_surface_variant"
                        android:fontFamily="monospace"
                        android:maxLines="2"
                        android:ellipsize="end"
                        tools:text="0110011..." />

                </LinearLayout>

            </LinearLayout>

            <!-- Row 3: Current Decoded Text -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hasil Decode Saat Ini:"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface_variant" />

                <TextView
                    android:id="@+id/tv_current_decoded"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/on_surface"
                    android:background="@color/primary_container"
                    android:padding="8dp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"
                    tools:text="HELLO" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>