<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/spl_matrix"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="20dp" />

        <!-- Auto Solve Toggle Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="@color/surface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Auto Solve Toggle Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/auto_solve_title"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/on_surface" />

                        <TextView
                            android:id="@+id/textAutoSolveDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="12sp"
                            android:textColor="@color/on_surface_variant"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/switchAutoSolve"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:layout_marginStart="16dp"
                        app:thumbTint="@color/switch_thumb"
                        app:trackTint="@color/switch_track_color"
                        android:minWidth="48dp"
                        android:minHeight="48dp" />

                </LinearLayout>

                <!-- Auto Solve Progress -->
                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/progressAutoSolve"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"
                    app:indicatorColor="@color/secondary"
                    app:trackThickness="3dp"
                    android:indeterminate="true" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Mode Selection Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSPLMode"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="SPL"
                    android:textSize="14sp"
                    app:backgroundTint="@color/primary"
                    app:cornerRadius="24dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnMatrixMode"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Matrix"
                    android:textSize="14sp"
                    android:textColor="@color/primary"
                    app:cornerRadius="24dp"
                    app:strokeColor="@color/on_surface"
                    app:strokeWidth="2dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- SPL Section -->
        <LinearLayout
            android:id="@+id/layoutSPL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pilih Metode:"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/on_surface"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnGaussJordan"
                            style="@style/Widget.Material3.Button"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:text="Gauss-Jordan"
                            android:textSize="12sp"
                            app:backgroundTint="@color/primary"
                            app:cornerRadius="24dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnCramer"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="Kaidah Cramer"
                            android:textSize="12sp"
                            android:textColor="@color/primary"
                            app:cornerRadius="24dp"
                            app:strokeColor="@color/on_surface"
                            app:strokeWidth="2dp" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ukuran Matrix:"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/on_surface"
                        android:layout_marginEnd="16dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:hint="Ukuran">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editSPLSize"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="3"
                            android:textSize="14sp"
                            android:inputType="number"
                            android:maxLength="2"
                            android:selectAllOnFocus="true" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Input Matrix Koefisien:"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/on_surface"
                        android:layout_marginBottom="12dp" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TableLayout
                            android:id="@+id/tableSPLMatrix"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </HorizontalScrollView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Konstanta:"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/on_surface"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="12dp" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/layoutSPLConstants"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center" />

                    </HorizontalScrollView>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Matrix Operations Section -->
        <LinearLayout
            android:id="@+id/layoutMatrixOps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Operation Selection -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pilih Operasi:"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/on_surface"
                        android:layout_marginBottom="12dp" />

                    <!-- First row of operations -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnAddition"
                            style="@style/Widget.Material3.Button"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="4dp"
                            android:text="+"
                            android:textSize="16sp"
                            app:backgroundTint="@color/primary"
                            app:cornerRadius="24dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnSubtraction"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="4dp"
                            android:text="-"
                            android:textSize="16sp"
                            android:textColor="@color/primary"
                            app:cornerRadius="24dp"
                            app:strokeColor="@color/on_surface"
                            app:strokeWidth="2dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnMultiplication"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:layout_marginStart="4dp"
                            android:text="×"
                            android:textSize="16sp"
                            android:textColor="@color/primary"
                            app:cornerRadius="24dp"
                            app:strokeColor="@color/on_surface"
                            app:strokeWidth="2dp" />

                    </LinearLayout>

                    <!-- Second row of operations -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnInverse"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="4dp"
                            android:text="Inverse"
                            android:textSize="12sp"
                            android:textColor="@color/primary"
                            app:cornerRadius="24dp"
                            app:strokeColor="@color/on_surface"
                            app:strokeWidth="2dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnDeterminant"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="4dp"
                            android:text="Determinan"
                            android:textSize="12sp"
                            android:textColor="@color/primary"
                            app:cornerRadius="24dp"
                            app:strokeColor="@color/on_surface"
                            app:strokeWidth="2dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnExponentiation"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:layout_marginStart="4dp"
                            android:text="Eksponen"
                            android:textSize="12sp"
                            android:textColor="@color/primary"
                            app:cornerRadius="24dp"
                            app:strokeColor="@color/on_surface"
                            app:strokeWidth="2dp" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Exponent Input -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardExponentInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Eksponen (n):"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/on_surface"
                            android:layout_marginEnd="16dp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                            android:hint="Masukkan eksponen">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/editExponent"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="2"
                                android:textSize="14sp"
                                android:inputType="number"
                                android:maxLength="2"
                                android:selectAllOnFocus="true" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Multiplication Method Selection -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardMultiplicationMethods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pilih Metode Perkalian:"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/on_surface"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnBruteForce"
                            style="@style/Widget.Material3.Button"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:text="Brute Force"
                            android:textSize="12sp"
                            app:backgroundTint="@color/primary"
                            app:cornerRadius="24dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnDivideConquer"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="Divide &amp; Conquer"
                            android:textSize="12sp"
                            android:textColor="@color/primary"
                            app:cornerRadius="24dp"
                            app:strokeColor="@color/on_surface"
                            app:strokeWidth="2dp" />

                    </LinearLayout>


                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Matrix A -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Matrix A:"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/on_surface"
                            android:layout_marginEnd="16dp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                            android:hint="Baris">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/editMatrixARows"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="2"
                                android:textSize="14sp"
                                android:inputType="number"
                                android:maxLength="2"
                                android:selectAllOnFocus="true" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="×"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginHorizontal="8dp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                            android:hint="Kolom">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/editMatrixACols"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="2"
                                android:textSize="14sp"
                                android:inputType="number"
                                android:maxLength="2"
                                android:selectAllOnFocus="true" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TableLayout
                            android:id="@+id/tableMatrixA"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </HorizontalScrollView>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Matrix B -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardMatrixB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:id="@+id/layoutMatrixBSize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Matrix B:"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/on_surface"
                            android:layout_marginEnd="16dp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                            android:hint="Baris">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/editMatrixBRows"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="2"
                                android:textSize="14sp"
                                android:inputType="number"
                                android:maxLength="2"
                                android:selectAllOnFocus="true" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="×"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginHorizontal="8dp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                            android:hint="Kolom">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/editMatrixBCols"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="2"
                                android:textSize="14sp"
                                android:inputType="number"
                                android:maxLength="2"
                                android:selectAllOnFocus="true" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TableLayout
                            android:id="@+id/tableMatrixB"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </HorizontalScrollView>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnManualSolve"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Solve"
                android:layout_marginEnd="8dp"
                android:visibility="gone"
                android:textColor="@color/white"
                app:backgroundTint="@color/primary"
                style="@style/Widget.Material3.Button.TonalButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnClear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Clear"
                android:layout_marginStart="8dp"
                style="@style/Widget.Material3.Button.OutlinedButton" />

        </LinearLayout>

        <!-- Loading Indicator -->
        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progressLoading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            app:indicatorColor="@color/primary"
            app:trackThickness="4dp" />

        <!-- Results Section -->
        <LinearLayout
            android:id="@+id/layoutResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hasil:"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/on_surface"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/textResult"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/on_surface_variant"
                        android:layout_marginBottom="12dp" />

                    <HorizontalScrollView
                        android:id="@+id/scrollResultMatrix"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <TableLayout
                            android:id="@+id/tableResultMatrix"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center" />

                    </HorizontalScrollView>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnShowSteps"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Tampilkan Langkah-langkah"
                        android:textSize="14sp"
                        app:cornerRadius="8dp"
                        app:strokeColor="@color/primary" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Steps Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSteps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Langkah-langkah Penyelesaian:"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/on_surface"
                        android:layout_marginBottom="12dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerSteps"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>