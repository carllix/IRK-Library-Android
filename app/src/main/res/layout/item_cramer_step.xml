<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Step Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/textStepNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_background"
                android:backgroundTint="@color/primary"
                android:text=""
                android:textColor="@color/on_primary"
                android:textSize="12sp"
                android:textStyle="bold"
                android:gravity="center"
                android:minWidth="24dp"
                android:minHeight="24dp"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/textDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hitung determinan matrix A:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/on_surface" />

        </LinearLayout>

        <!-- Variable Text -->
        <TextView
            android:id="@+id/textVariable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Untuk x1:"
            android:textSize="13sp"
            android:textColor="@color/secondary"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />

        <!-- Matrix Display -->
        <HorizontalScrollView
            android:id="@+id/scrollMatrix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <TableLayout
                android:id="@+id/tableMatrix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/table_row_border"
                android:padding="8dp" />

        </HorizontalScrollView>

        <!-- Determinant Result -->
        <TextView
            android:id="@+id/textDeterminant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Determinan = 10"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:background="@drawable/square_background"
            android:backgroundTint="@color/primary_container"
            android:padding="8dp"
            android:visibility="gone" />

        <!-- Calculation Text -->
        <TextView
            android:id="@+id/textCalculation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="x1 = det(A1)/det(A) = 8/10 = 0.8"
            android:textSize="13sp"
            android:textColor="@color/on_surface_variant"
            android:textStyle="italic"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:visibility="gone" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>