<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/huffman"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="20dp" />

        <!-- Input Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/surface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/huffman_input_title"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/huffman_input_hint"
                    app:boxStrokeColor="@color/primary"
                    app:hintTextColor="@color/primary"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minLines="2"
                        android:maxLines="4"
                        android:inputType="textMultiLine"
                        android:textColor="@color/on_surface" />

                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_process"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="@string/huffman_process"
                        android:textSize="16sp"
                        app:iconGravity="textStart" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_clear"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="@string/huffman_clear"
                        android:textSize="16sp"
                        style="@style/Widget.Material3.Button.OutlinedButton" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Progress Indicator -->
        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progress_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            app:indicatorColor="@color/primary" />

        <!-- Results Container -->
        <LinearLayout
            android:id="@+id/ll_results_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Tree Animation Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Card Header -->
                    <LinearLayout
                        android:id="@+id/ll_tree_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/huffman_tree_animation"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/on_surface" />

                        <ImageView
                            android:id="@+id/iv_tree_expand"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:contentDescription="@string/huffman"
                            android:src="@drawable/ic_expand_more"
                            app:tint="@color/on_surface_variant" />

                    </LinearLayout>

                    <!-- Expandable Content -->
                    <LinearLayout
                        android:id="@+id/ll_tree_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            tools:ignore="UselessParent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/huffman_tree_animation_info"
                                android:textSize="12sp"
                                android:textColor="@color/on_surface_variant"
                                android:layout_marginBottom="8dp"
                                android:layout_gravity="center_horizontal" />

                            <com.irklibrary.app.ui.page3.HuffmanTreeView
                                android:id="@+id/huffman_tree_view"
                                android:layout_width="match_parent"
                                android:layout_height="350dp"
                                android:layout_marginBottom="12dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_reset_zoom"
                                android:layout_width="wrap_content"
                                android:layout_height="48dp"
                                android:layout_gravity="center_horizontal"
                                android:text="@string/huffman_tree_view_reset"
                                style="@style/Widget.Material3.Button.OutlinedButton" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Construction Steps Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Card Header -->
                    <LinearLayout
                        android:id="@+id/ll_steps_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/huffman_construction_steps"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/on_surface" />

                        <ImageView
                            android:id="@+id/iv_steps_expand"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:contentDescription="@string/huffman"
                            android:src="@drawable/ic_expand_more"
                            app:tint="@color/on_surface_variant" />

                    </LinearLayout>

                    <!-- Expandable Content -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_construction_steps"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:padding="16dp"
                        android:nestedScrollingEnabled="false"
                        tools:listitem="@layout/item_construction_step" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Encoding Results Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Card Header -->
                    <LinearLayout
                        android:id="@+id/ll_encoding_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/huffman_encoding_results"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/on_surface" />

                        <ImageView
                            android:id="@+id/iv_encoding_expand"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:contentDescription="@string/huffman"
                            android:src="@drawable/ic_expand_more"
                            app:tint="@color/on_surface_variant" />

                    </LinearLayout>

                    <!-- Expandable Content -->
                    <LinearLayout
                        android:id="@+id/ll_encoding_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:padding="16dp">

                        <!-- Code Table Header -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@color/primary"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/huffman_character_header"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/on_primary"
                                android:gravity="center" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/huffman_frequency_header"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/on_primary"
                                android:gravity="center" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/huffman_code_header"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/on_primary"
                                android:gravity="center" />

                        </LinearLayout>

                        <!-- Code Table -->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_code_table"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false"
                            android:background="@color/surface_variant"
                            tools:listitem="@layout/item_huffman_code" />

                        <!-- Encoding Instructions -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/huffman_encoding_instruction"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/on_surface"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="8dp" />

                        <!-- Encoded Text -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tv_encoded_text"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@color/surface_variant"
                                android:padding="12dp"
                                android:textSize="12sp"
                                android:fontFamily="monospace"
                                android:textColor="@color/on_surface_variant"
                                android:textIsSelectable="true"
                                tools:text="" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_copy_encoded"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:icon="@drawable/ic_copy"
                                android:insetLeft="0dp"
                                android:insetRight="0dp"
                                android:minWidth="48dp"
                                android:minHeight="48dp"
                                style="@style/Widget.Material3.Button.IconButton" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Decoding Process Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Card Header -->
                    <LinearLayout
                        android:id="@+id/ll_decoding_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/huffman_decoding_process"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/on_surface" />

                        <ImageView
                            android:id="@+id/iv_decoding_expand"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:contentDescription="@string/huffman"
                            android:src="@drawable/ic_expand_more"
                            app:tint="@color/on_surface_variant" />

                    </LinearLayout>

                    <!-- Expandable Content -->
                    <LinearLayout
                        android:id="@+id/ll_decoding_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:padding="16dp">

                        <!-- Decoding Instructions -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/huffman_decoding_instruction"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/on_surface"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/huffman_decoding_info"
                            android:textSize="12sp"
                            android:textColor="@color/on_surface_variant"
                            android:layout_marginBottom="16dp" />

                        <!-- Decoding Steps -->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_decoding_steps"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false"
                            tools:listitem="@layout/item_decoding_step" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Compression Ratio Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Card Header -->
                    <LinearLayout
                        android:id="@+id/ll_compression_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/huffman_compression_ratio"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/on_surface" />

                        <ImageView
                            android:id="@+id/iv_compression_expand"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:contentDescription="@string/huffman"
                            android:src="@drawable/ic_expand_more"
                            app:tint="@color/on_surface_variant" />

                    </LinearLayout>

                    <!-- Expandable Content -->
                    <LinearLayout
                        android:id="@+id/ll_compression_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:padding="16dp">

                        <!-- Formula Display -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="1dp"
                            app:cardBackgroundColor="@color/primary_container">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="12dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Rumus:"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/on_primary_container"
                                    android:layout_marginBottom="4dp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/huffman_compression_formula"
                                    android:textSize="14sp"
                                    android:textColor="@color/on_primary_container"
                                    android:fontFamily="monospace"
                                    android:gravity="center"
                                    android:layout_marginBottom="8dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/huffman_compression_note"
                                    android:textSize="12sp"
                                    android:textColor="@color/on_primary_container"
                                    android:fontStyle="italic"
                                    android:gravity="center"
                                    android:layout_gravity="center_horizontal" />

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <!-- Compression Statistics -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@color/surface_variant"
                            android:padding="16dp">

                            <!-- Original Size -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="8dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/huffman_original_size"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/on_surface_variant" />

                                <TextView
                                    android:id="@+id/tv_original_size"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:textColor="@color/on_surface_variant"
                                    android:fontFamily="monospace"
                                    tools:text="64 bit" />

                            </LinearLayout>

                            <!-- Compressed Size -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="8dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/huffman_compressed_size"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/on_surface_variant" />

                                <TextView
                                    android:id="@+id/tv_compressed_size"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:textColor="@color/on_surface_variant"
                                    android:fontFamily="monospace"
                                    tools:text="42 bit" />

                            </LinearLayout>

                            <!-- Compression Ratio -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/huffman_compression_percentage"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/primary" />

                                <TextView
                                    android:id="@+id/tv_compression_ratio"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/primary"
                                    android:fontFamily="monospace"
                                    tools:text="65.63%" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </LinearLayout>

</ScrollView>